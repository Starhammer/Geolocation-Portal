@{
    ViewBag.Title = "Record";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <form>
            <h2>Datensatz hinzufügen</h2>
            <br />
            <div class="form-group row">
                <label for="title" class="col-3">Titel</label>
                <div class="col-9">
                    <input type="text" class="form-control mw-100" id="title" maxlength="50">
                </div>
                <div class="col-3">
                    <label for="licence">Lizenz</label>
                </div>
                <div class="col-9">
                    <select class="form-control mw-100" id="selectLicence">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                    </select>
                </div>
                <div class="col-3">
                    <label for="role">Sichtbarkeit</label>
                </div>
                <div class="col-9">
                    <select class="form-control mw-100" id="selectRole">
                        <option>Gastuser</option>
                        <option>Mitarbeiter</option>
                        <option>Administrator</option>
                        <option>4</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="description">Beschreibung</label>
                <textarea class="form-control mw-100" id="textareaDescription" rows="10" maxlength="3000"></textarea>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label for="Category">Kategorie</label>
                </div>
                <div class="col-9">
                    <select class="form-control mw-100" id="selectCategory">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label for="Location">Ort</label>
                </div>
                <div class="col-9">
                    <select class="form-control mw-100" id="selectLocation">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                    </select>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col">
                    Dateien und Quellen
                </div>
                <div class="col">
                    <button class="btn btn-primary" type="button">Dateien auswählen</button>
                </div>
            </div>
            <br />

            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="checkIsGeoFile">
                <label class="form-check-label" for="checkIsGeoFile">Datensatz enthält Geo-Location-Datei</label>
            </div>

            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="checkIsDiagramFile">
                <label class="form-check-label" for="checkIsDiagramFile">Datensatz enthält Diagramm</label>
            </div>

            <button type="submit" class="btn btn-primary">Datensatz hochladen</button>


        </form>
    </div>
}