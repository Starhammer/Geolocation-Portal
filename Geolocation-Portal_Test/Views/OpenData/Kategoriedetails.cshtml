    </div>

    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Bearbeiten", "Kategoriebearbeitung", new { id = Model.Id }, new { @class = "btn btn-primary" })
            <a href="@Url.Action("Kategorieverwaltung", "OpenData")" class="btn btn-primary">Zurück zur Rollenverwaltung</a>
        </div>
    </div>
</div>
