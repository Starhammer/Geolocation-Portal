<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Geo-Portal Mosbach</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/Content/Images/logo-mosbach.png" class="img-center" height="50" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Startseite", "Index", "Home")</li>
                    <li>@Html.ActionLink("Open Data", "Index", "OpenData")</li>
                    <li>@Html.ActionLink("Geo Data", "Index", "GeoData")</li>
                    <li>@Html.ActionLink("FAQ", "Index", "FAQ")</li>
                    <li>@Html.ActionLink("Imresspum", "Impressum", "Home")</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="container">
                <span>Textgröße</span>
                <span>Kontrast</span>
            </div>

            <div class="container">
                <span>
                    <a href="http://www.instagram.de">
                        <img src="~/Content/Images/SocialMedia/instagram.png" class="img-center" height="50" width="50" />
                    </a>
                </span>
                <span>
                    <a href="http://www.facebook.de">
                        <img src="~/Content/Images/SocialMedia/facebook.png" class="img-center" height="50" width="50" />
                    </a>
                </span>
                <span>
                    <a href="http://www.twitter.de">
                        <img src="~/Content/Images/SocialMedia/twitter.png" class="img-center" height="50" width="50" />
                    </a>
                </span>
            </div>

            <div class="container">
                <a>@Html.ActionLink("Kontakt", "Kontakt", "Home")</a> |
                <a>@Html.ActionLink("Impressum", "Impressum", "Home")</a> |
                <a>@Html.ActionLink("Datenschutz", "Datenschutz", "Home")</a> |
                <a>@Html.ActionLink("Nutzungsbedingungen", "Nutzungsbedingungen", "Home")</a> |
                <a>@Html.ActionLink("Weitere Gemeindeseiten", "WeitereGemeindeseiten", "Home")</a>
            </div>

            <p>&copy; @DateTime.Now.Year - Große Kreisstadt Mosbach</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
