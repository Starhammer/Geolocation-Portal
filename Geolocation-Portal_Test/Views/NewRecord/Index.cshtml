@{
    ViewBag.Title = "Index";
}

<form>
    <h2>Datensatz manipulieren</h2>
    <br />
    <div class="form-group">
        <div class="row">
            <div class="col-3">
                <label for="title">Titel</label>
            </div>
            <div class="col-9">
                <input type="text" class="form-control" id="inputTitle" aria-describedby="">
            </div>
        </div>

        <div class="row">
            <div class="col-3">
                <label for="licence">Lizenz</label>
            </div>
            <div class="col-9">
                <select class="form-control" id="selectCategory">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-3">
                <label for="role">Sichtbarkeit</label>
            </div>
            <div class="col-9">
                <select class="form-control" id="selectCategory">
                    <option>Gastuser</option>
                    <option>Mitarbeiter</option>
                    <option>Administrator</option>
                    <option>4</option>
                </select>
            </div>
        </div>

        <br />

        <label for="description">Beschreibung</label>
        <textarea class="form-control" id="textareaDescription" rows="10"></textarea>

        <div class="form-group">
            <label for="Category">Kategorie</label>
            <select class="form-control" id="selectCategory" data-live-search="true">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
            </select>
        </div>
        <div class="form-group">
            <label for="Location">Ort</label>
            <select class="form-control" id="selectLocation" data-live-search="true">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
            </select>
        </div>

        <br />

        <div class="row">
            <div class="col">
                Dateien und Quellen
            </div>
            <div class="col">
                <button class="btn btn-primary" type="button">Dateien auswählen</button>
            </div>
        </div>

        <br />
        <button type="submit" class="btn btn-primary">Datensatz hochladen</button>


</form>